{
    "name": "moonlight-poland/laravel-context-aware-thumbnails",
    "version": "3.1.0",
    "description": "Context-Aware on-demand thumbnail generation for Laravel with intelligent path organization, Smart Crop, AVIF/WebP support, Laravel Native Signed URLs, and variants system. Automatically organize thumbnails by user/post/album. Zero config, blazing fast! Laravel 12+ ready.",
    "keywords": [
        "laravel",
        "laravel-12",
        "thumbnails",
        "images",
        "on-demand",
        "lazy",
        "context-aware",
        "smart-crop",
        "avif",
        "webp",
        "signed-urls",
        "hotlinking-protection",
        "variants",
        "organized",
        "intervention",
        "gd",
        "imagick",
        "symfony",
        "liip"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Moonlight Team",
            "email": "kontakt@howtodraw.pl"
        }
    ],
    "require": {
        "php": "^8.1|^8.2|^8.3",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/http": "^10.0|^11.0|^12.0",
        "illuminate/filesystem": "^10.0|^11.0|^12.0",
        "ext-gd": "*"
    },
    "suggest": {
        "intervention/image": "Required for advanced image manipulation, Smart Crop, and better performance (recommended)",
        "ext-imagick": "Required for Imagick driver support and AVIF format generation (optional)"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.6",
        "intervention/image": "^2.7|^3.0"
    },
    "autoload": {
        "psr-4": {
            "Moonlight\\Thumbnails\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Moonlight\\Thumbnails\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Moonlight\\Thumbnails\\ThumbnailsServiceProvider"
            ],
            "aliases": {
                "Thumbnail": "Moonlight\\Thumbnails\\Facades\\Thumbnail"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

